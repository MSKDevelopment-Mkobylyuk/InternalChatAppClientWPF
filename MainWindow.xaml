<Window x:Class="InternalChatAppClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Internal Chat App" Height="450" Width="400"
        Background="#121324" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <!-- Button style to darken background when pressed -->
        <Style x:Key="ClickDarkenButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4E7FFF" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A5AD9" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for Group Circle Buttons -->
        <Style x:Key="GroupCircleButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="#4E7FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A5AD9"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A89FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Groups circles -->
            <RowDefinition Height="Auto"/>
            <!-- Username input -->
            <RowDefinition Height="*"/>
            <!-- Chat display -->
            <RowDefinition Height="Auto"/>
            <!-- Message input -->
        </Grid.RowDefinitions>

        <!-- Groups Circles Panel -->
        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Height="50" Margin="0 0 0 10">
            <StackPanel x:Name="GroupsPanel" Orientation="Horizontal" VerticalAlignment="Center" />
        </ScrollViewer>

        <!-- Username Input -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 15" VerticalAlignment="Center">
            <Grid Width="250" Height="30" Margin="0 0 10 0">
                <!-- Placeholder Text -->
                <TextBlock x:Name="UsernamePlaceholder" Text="Enter your name..." 
                           Foreground="#888" Padding="8,4"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           FontSize="14"/>
                <!-- Actual Input -->
                <TextBox x:Name="UsernameTextBox"
                         Background="#2A2A3D"
                         Foreground="#EEE"
                         BorderThickness="0"
                         Padding="8,0"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         TextChanged="UsernameTextBox_TextChanged"/>
            </Grid>
            <Button x:Name="ConnectButton"
                    Content="Connect"
                    Width="90"
                    Height="30"
                    Style="{StaticResource ClickDarkenButtonStyle}"
                    Click="ConnectButton_Click"/>
        </StackPanel>

        <!-- Chat Display -->
        <ListBox x:Name="ChatListBox" Grid.Row="2" 
                 Background="#1E1E3F" Foreground="White" 
                 BorderThickness="0"
                 FontSize="14"
                 Padding="10"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 />

        <!-- Message Input -->
        <Grid Grid.Row="3" Margin="0 15 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <!-- Placeholder Text -->
                <TextBlock x:Name="MessagePlaceholder" Text="Type a message..."
                           Foreground="#888" Padding="8,4"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           FontSize="14"/>
                <TextBox x:Name="MessageTextBox"
                         Background="#2A2A3D"
                         Foreground="White"
                         BorderThickness="0"
                         Padding="8,0"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         TextChanged="MessageTextBox_TextChanged"
                         KeyDown="MessageTextBox_KeyDown"/>
            </Grid>

            <Button x:Name="SendButton" Grid.Column="1"
                    Content="Send"
                    Margin="10,0,0,0"
                    Style="{StaticResource ClickDarkenButtonStyle}"
                    IsEnabled="False"
                    Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Window>
